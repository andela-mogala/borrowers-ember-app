
<table class="mt3 fit">
  <thead class="p1 h2">
    <tr class="white bg-blue">
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="p1 h3">
    {{#each model as |friend|}}
      <tr>
        <td>{{link-to friend.fullName 'friends.show' friend}}</td>
        <td><button {{action 'delete' friend}}>Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>