
<table class="mt3 fit">
  <thead class="p1 h2">
    <tr class="white bg-blue">
      <th {{action 'setSortBy' 'first-name'}}>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="p1 h3">
    {{#each model as |friend|}}
      <tr>
        <td>{{link-to friend.fullName 'loans.index' friend}}</td>
        <td><button {{action 'delete' friend}} class="btn btn-outline mbl red">Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>