<form {{action 'save' on='submit'}} class="col-8 px2 mx-auto borrowers-form">
  {{#if errorMessage}}
    <h2 class="white bg-red p1">{{errorMessage}}</h2>
  {{/if}}
  {{input value=model.name placeholder='Article Name' class='input fit'}}
  <button {{action 'cancel'}} class="btn h3 white border bg-gray p2 mr2 col-3">Cancel</button>
  <button type="submit" class="btn h3 white border bg-green p2 mr2 col-3">Save</button>
</form>